{
  "name": "radix-incentives",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "format": "biome format --write ./packages/**/**/*.ts",
    "lint": "biome lint --write ./packages/**/**/*.ts",
    "check-types": "biome check --write ./packages/**/**/*.ts",
    "db:start": "docker compose -f docker-compose.yml up -d",
    "db:generate": "turbo run db:generate:incentives db:generate:consultation",
    "db:migrate": "turbo run db:migrate:incentives db:migrate:consultation",
    "db:studio": "turbo run db:studio:incentives db:studio:consultation",
    "db:push": "turbo run db:push:incentives db:push:consultation",
    "db:create": "./postgres-init/init-db.sh"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "prettier": "^3.5.3",
    "turbo": "^2.5.0",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=18"
  }
}
